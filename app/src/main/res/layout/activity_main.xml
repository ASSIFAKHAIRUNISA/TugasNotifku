<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Logo Like -->
    <ImageView
        android:id="@+id/like"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/like"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Like Logo" />

    <!-- Jumlah Like -->
    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/like"
        app:layout_constraintBottom_toBottomOf="@id/like"
        app:layout_constraintStart_toEndOf="@id/like" />

    <!-- Logo Dislike -->
    <ImageView
        android:id="@+id/dislike"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/dislike"
        app:layout_constraintTop_toBottomOf="@id/like"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Dislike Logo"
        android:layout_marginTop="16dp" />

    <!-- Jumlah Dislike -->
    <TextView
        android:id="@+id/tvDislikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/dislike"
        app:layout_constraintBottom_toBottomOf="@id/dislike"
        app:layout_constraintStart_toEndOf="@id/dislike" />

    <!-- Tombol Kirim Notifikasi -->
    <Button
        android:id="@+id/btnSendNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Notifikasi"
        app:layout_constraintTop_toBottomOf="@id/dislike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
